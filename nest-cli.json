{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "auction-service": {
      "type": "application",
      "root": "apps/auction-service",
      "entryFile": "main",
      "sourceRoot": "apps/auction-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auction-service/tsconfig.app.json",
        "assets": [
          "./src/prisma/generated/**/*"
        ]
      }
    },
    "catalog-query-service": {
      "type": "application",
      "root": "apps/catalog-query-service",
      "entryFile": "main",
      "sourceRoot": "apps/catalog-query-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/catalog-query-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "notification-consumer-service": {
      "type": "application",
      "root": "apps/notification-consumer-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-consumer-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-consumer-service/tsconfig.app.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}