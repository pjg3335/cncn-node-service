{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "auction-service": {
      "type": "application",
      "root": "apps/auction-service",
      "entryFile": "main",
      "sourceRoot": "apps/auction-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auction-service/tsconfig.app.json",
        "assets": [
          "./src/prisma/generated/**/*"
        ]
      }
    },
    "bff-server": {
      "type": "application",
      "root": "apps/bff-server",
      "entryFile": "main",
      "sourceRoot": "apps/bff-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bff-server/tsconfig.app.json"
      }
    },
    "catalog-query-service": {
      "type": "application",
      "root": "apps/catalog-query-service",
      "entryFile": "main",
      "sourceRoot": "apps/catalog-query-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/catalog-query-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}